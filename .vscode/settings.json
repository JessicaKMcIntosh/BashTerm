{
    "cSpell.words": [
        "brightblack",
        "brightblue",
        "brightcyan",
        "brightgreen",
        "brightmagenta",
        "brightred",
        "brightwhite",
        "brightyellow",
        "civis",
        "cnorm",
        "Consolas",
        "cvvis",
        "ERRNO",
        "failglob",
        "getline",
        "hexdump",
        "infocmp",
        "invis",
        "nullglob",
        "RFPL",
        "ritm",
        "rmir",
        "rmso",
        "rmul",
        "RSTART",
        "setab",
        "setaf",
        "shellcheck",
        "sitm",
        "smir",
        "smso",
        "smul",
        "sprintf",
        "strtonum",
        "terminfo",
        "toupper",
        "tput"
    ],
    "cSpell.ignorePaths": [
        "alt_boxes.sh"
    ],
    "files.eol": "\n",
    "markdownlint.run": "onSave",
    "markdownlint.config": {
        "no-duplicate-heading": {
            "siblings_only": true
        },
        "MD013": false
    },
    "markdown.extension.toc.slugifyMode": "github",
    "markdown.extension.toc.levels": "2..3",
    "markdown.extension.toc.orderedList": false,
    "markdown.extension.toc.unorderedList.marker": "*",
    "shellcheck.customArgs": ["-x"],
    "shellcheck.run": "onSave", // also: "onType" // Be less annoying.
    "shellcheck.ignorePatterns": {
    "src/**": true
    },
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 8
    },
    "material-icon-theme.files.associations": {
        "*.m1": "Command"
    }
}
